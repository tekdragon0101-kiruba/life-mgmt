        },
        "auth": {
          "kind": "mocked",
          "users": {
            "karan": {
              "password": "karan123"
            }
          }
        }
      }
    },
    "requires": {
      "RewardsMgmtService": {
        "kind": "odata",
        "model": "srv/external/RewardsMgmtService",
        "credentials": {
          "url": "http://localhost:4005/rewardsmgmt",
          "authentication": "BasicAuthentication",
          "username": "karan",
          "password": "karan123"
        }
      },
      "destinations": true
    }
  },
  "sapux": [
    "app/tasks",
    "app/resources"
